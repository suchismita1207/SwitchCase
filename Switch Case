#include <stdio.h>
int main() 
{
    //1. Display the menu
    printf("Pick an item:\n1. Pizza\n2. Burger\n3. Pasta\n4. French Fries\n5. Sandwich\n");
    
    //2. Reading their choice
    int choice=0;
    scanf("%d", &choice);
    
    //3. Display based on their choice
    switch(choice)
    {
        case 1:
        printf("Food item - Pizza");
        printf("\nPrice - Rs 239");
        break;
        
        case 2:
        printf("Food item - Burger");
        printf("\nPrice - Rs 129");
        break;
        
        case 3:
        printf("Food item - Pasta");
        printf("\nPrice - Rs 179");
        break;
        
        case 4:
        printf("Food item - French Fries");
        printf("\nPrice - Rs 99");
        break;
        
        case 5:
        printf("Food item - Sandwich");
        printf("\nPrice - Rs 149");
        break;
        
        default:
        printf("Invalid choice");
    }
    return 0;
}
